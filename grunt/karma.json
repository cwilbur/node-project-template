{
  "options": {
    "basePath": "",
    "plugins": [
      "karma-browserify",
      "karma-jasmine",
      "karma-chrome-launcher",
      "karma-phantomjs-launcher"
    ],
    "frameworks": ["jasmine", "browserify"],
    "files": [
      "<%= paths.tests %>"
    ],
    "preprocessors": {
      "<%= paths.tests %>": ["browserify"]
    },
    "reporters": ["progress"],
    "port": 9876,
    "colors": true,
    "autoWatch": true,
    "browsers": ["PhantomJS", "Chrome"],
    "logLevel": "INFO",
    "singleRun": false,
    "browserify": {
      "debug": true,
      "transform": ["brfs"]
    }
  },
  "continuously": {
    "browsers": ["PhantomJS", "Chrome"],
    "autoWatch": true,
    "background": false,
    "singleRun": false
  },
  "background": {
    "browsers": ["PhantomJS", "Chrome"],
    "autoWatch": true,
    "background": true,
    "singleRun": false
  },
  "once": {
    "browsers": ["PhantomJS"],
    "autoWatch": false,
    "background": false,
    "singleRun": true
  },
  "sublime_text": {
    "browsers": ["PhantomJS"],
    "autoWatch": false,
    "background": false,
    "singleRun": true,
    "colors": false
  }
}
