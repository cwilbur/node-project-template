{
  "options": {
    "basePath": "",
    "plugins": ["karma-commonjs", "karma-jasmine", "karma-chrome-launcher", "karma-phantomjs-launcher"],
    "frameworks": ["jasmine", "commonjs"],
    "files": [
      "spec/**/*.spec.js",
      "lib/**/*.js"
    ],
    "exclude": [],
    "preprocessors": {
      "!(node_modules)*/**/*.js": ["commonjs"]
    },
    "reporters": ["progress"],
    "port": 9876,
    "colors": true,
    "autoWatch": true,
    "browsers": ["PhantomJS", "Chrome"],
    "logLevel": "INFO",
    "singleRun": false
  },
  "continuously": {
    "browsers": ["PhantomJS", "Chrome"],
    "autoWatch": true,
    "background": false,
    "singleRun": false
  },
  "background": {
    "browsers": ["PhantomJS", "Chrome"],
    "autoWatch": true,
    "background": true,
    "singleRun": false
  },
  "once": {
    "browsers": ["PhantomJS"],
    "autoWatch": false,
    "background": false,
    "singleRun": true
  },
  "sublime_text": {
    "browsers": ["PhantomJS"],
    "autoWatch": false,
    "background": false,
    "singleRun": true,
    "colors": false
  }
}
